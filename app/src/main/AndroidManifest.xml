<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="group10_cmsc436.pantrychef">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewRecipeActivity"
            android:label="@string/new_recipe_label" >
        </activity>
        <activity
            android:name=".RecipeResultsActivity"
            android:label="Recipe Results">
        </activity>
        <activity
            android:name=".ViewRecipeActivity"
            android:label="View Recipe">
        </activity>
        <activity
            android:name=".SavedRecipesActivity"
            android:label="Saved Recipes">
        </activity>
    </application>

</manifest>
